<div class="row">
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-5 col-lg-offset-5">
    <div style="padding-bottom: 9px;margin: 40px 0 20px;
        border-bottom: 1px solid #eeeeee;">
      <h1>Sign In</h1>
    </div>
    <%= form_for(:session, url: sessions_path,
          html: { class: "form-signin form-horizontal" } ) do |f| %>
      <div class="row">
        <div class="form-group form-group-lg">
          <label class="col-sm-3 col-md-3 col-lg-3 control-label"
              for="user_password">Password</label>
          <div class="col-sm-9 col-md-9 col-lg-9">
            <%= f.password_field :password, class: "form-control",
                  placeholder: "Password",  style:"width:100%" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group form-group-lg">
          <div class="col-sm-9 col-md-9 col-sm-offset-3 col-md-offset-3">
            <%= f.submit "Sign in", class: "btn btn-default" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
